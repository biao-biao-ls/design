# KNZN 平台环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 站点配置
SITE_URL=https://knzn.net
NODE_ENV=development

# 数据库配置
DATABASE_URL=postgresql://knzn_user:password@localhost:5432/knzn_development
DATABASE_HOST=localhost
DATABASE_NAME=knzn_development
DATABASE_USER=knzn_user
DATABASE_PASSWORD=your_secure_password

# Better Auth 配置
BETTER_AUTH_SECRET=your-32-character-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# OAuth 配置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# 邮件服务配置 (Resend)
RESEND_API_KEY=re_your_resend_api_key

# 文件存储配置 (Cloudflare R2)
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# 备份加密密码
BACKUP_PASSWORD=your_backup_encryption_password

# PgAdmin 配置 (开发环境)
PGADMIN_PASSWORD=admin123