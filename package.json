{
  "name": "knzn-platform",
  "version": "1.0.0",
  "description": "KNZN 硬件学习平台 - 基于 Nuxt 4 的全栈应用",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up -d && npm run dev",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "dev:setup": "bash scripts/dev-setup.sh",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "validate-env": "node -e \"require('./server/utils/env-validation').validateEnvironment()\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production drizzle-kit migrate",
    "db:migrate:dev": "DATABASE_URL=postgresql://knzn_user:password@localhost:5432/knzn_development drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:reset": "rm -rf ./drizzle && npm run db:generate"
  },
  "dependencies": {
    "@nuxt/image": "^1.8.1",
    "@pinia/nuxt": "^0.5.5",
    "@vueuse/nuxt": "^11.2.0",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "nuxt": "^3.14.159",
    "pinia": "^2.2.6",
    "postgres": "^3.4.5",
    "vue": "latest",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.1",
    "@iconify-json/simple-icons": "^1.2.7",
    "@nuxt/eslint": "^0.7.4",
    "@types/node": "^22.10.2",
    "@unocss/nuxt": "^66.5.11",
    "@unocss/preset-icons": "^66.5.11",
    "@unocss/preset-typography": "^66.5.11",
    "@unocss/preset-uno": "^66.5.11",
    "@unocss/preset-web-fonts": "^66.5.11",
    "@vitest/ui": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.17.0",
    "fast-check": "^4.5.2",
    "jsdom": "^27.4.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "vue-tsc": "^2.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
